@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
        <li class="dropdown">
            

            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User Info<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>
                    <a href=""><i class='fa fa-history fa-fw'></i> Wallet </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class='fa fa-check fa-fw'></i> Hello @User.Identity.GetUserName() </a>
                </li>
                <li>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                     <a id="logoutHyperLink" href="javascript:document.getElementById('logoutForm').submit()" onclick="localStorage.AssignmentLocalData = 'nodata'"><i class="fa fa-sign-out"></i> Log off</a>
                    }
                </li>
            </ul>
        </li>  
}
